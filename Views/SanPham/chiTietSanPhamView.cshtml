}


<!-- Danh sách thư mục -->
<div class="danh_sach_thumuc" style="padding-top: 0;">
    <div class="grid wide">
        <div class="row">
            <div class="col l-12">
                <div class="danh_sach_thumuc_container">
                    <ul class="danh_sach_thumuc_list">
                        <li class="danh_sach_thumuc_pt">
                            <a href="/home/index" class="danh_sach_thumuc_link kich_thuoc_chu">CHKB Khánh Băng shop</a>
                        </li>
                        <i class="fa-solid fa-chevron-right mau_thu_muc_icon"></i>
                        <li class="danh_sach_thumuc_pt">
                            <a href="/home/DanhMucTheoMaSanPham?id=@Model.MaSanPham" class="danh_sach_thumuc_link kich_thuoc_chu">@ViewBag.DanhMuc</a>
                        </li>
                        <i class="fa-solid fa-chevron-right mau_thu_muc_icon"></i>
                        <li class="danh_sach_thumuc_pt kich_thuoc_chu">@Model.TenSanPham</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Mô tả sản phẩm -->
